{
  "name": "@realestate/shared-utils",
  "version": "1.0.0",
  "description": "Shared utilities and infrastructure for real estate microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate-service": "ts-node src/service/generator.ts",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "bin": {
    "create-realestate-service": "dist/service/generator.js"
  },
  "dependencies": {
    "ioredis": "^5.3.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./service": {
      "require": "./dist/service/index.js",
      "types": "./dist/service/index.d.ts"
    },
    "./bus": {
      "require": "./dist/bus/index.js",
      "types": "./dist/bus/index.d.ts"
    },
    "./cache": {
      "require": "./dist/cache/index.js",
      "types": "./dist/cache/index.d.ts"
    },
    "./debounce": {
      "require": "./dist/debounce/index.js",
      "types": "./dist/debounce/index.d.ts"
    }
  }
}
