{
  "name": "@realestate/integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for real estate microservices",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "ts-node src/ingestor-enrichment.test.ts",
    "test:pipeline": "vitest run src/pipeline-simple.test.ts",
    "test:pipeline-full": "vitest run src/ingestor-enrichment-rent.test.ts",
    "test:underwriting": "vitest run src/underwriting-integration.test.ts",
    "test:alerts": "vitest run src/alerts-integration.test.ts",
    "test:all": "npm run test:integration && npm run test:pipeline && npm run test:underwriting && npm run test:alerts",
    "lint": "eslint src/**/*.ts",
    "build": "tsc"
  },
  "dependencies": {
    "@realestate/alerts": "file:../alerts",
    "@realestate/enrichment": "file:../enrichment",
    "@realestate/ingestor": "file:../ingestor",
    "@realestate/rent-estimator": "file:../rent-estimator",
    "@realestate/underwriting": "file:../underwriting"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "ioredis": "^5.3.0",
    "pg": "^8.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
